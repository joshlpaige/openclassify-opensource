{% if entries('advs').isEnabled('dopings') %}
    {% set doping_advs = entries('dopings').get().getFeaturedAds(1) %}
    {% if(doping_advs|length>0) %}
        <div class="col-md-12 s-container">
            {% for adv in doping_advs %}
                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-6 thumb s-product-item">
                    <a href="{{ adv.detail_url }}">
                        <div class="card hovercard">
                            <div class="s-ad-item">
                                <img alt="" width="100%" height="100px" src="{{ adv.cover_photo }}" alt="{{ adv.name }}">
                            </div>
                            <div class="card-footer text-center s-ad-title">{{ adv.name }}</div>
                            <div class="card-footer text-center">{{ adv.price }} {{ adv.currency }}</div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endif %}






