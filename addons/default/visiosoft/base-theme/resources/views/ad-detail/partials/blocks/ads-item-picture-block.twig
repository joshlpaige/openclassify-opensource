<div class="fotorama"
     data-width="700"
     data-ratio="3/2"
     data-nav="thumbs"
     data-thumbheight="48">
    {% set advPhoto = '' %}
    {% if count(adv.files) == 0 %}
        {% set advPhoto = img('theme::images/no-image.png').url %}
        <a href="{{ image }}"><img src="{{ img('theme::images/no-image.png').url }}"></a>
    {% else %}
        {% for image in adv.getViewPhotoUrl %}
            <a href="{{ image }}"><img src="{{ image }}"></a>
            {% if loop.index == 1 %}
                {% set advPhoto = image %}
            {% endif %}
        {% endfor %}

    {% endif %}
</div>